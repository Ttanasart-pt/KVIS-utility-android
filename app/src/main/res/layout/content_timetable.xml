<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    `

    <TextView
        android:id="@+id/tvTableToday"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.03"
        android:gravity="bottom"
        android:password="false"
        android:text="Today"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvTableTomorrow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTableTomorrow"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="Tomorrow"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@+id/tvTableToday"
        app:layout_constraintRight_toLeftOf="@+id/tvTableAfter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTableAfter"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="After"
        android:textAlignment="center"
        android:textColor="@color/darkest_gray"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tvTableTomorrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/listTodayTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:clickable="false"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tvTableToday"
        app:layout_constraintRight_toRightOf="@id/tvTableToday"
        app:layout_constraintTop_toBottomOf="@id/tvTableToday"

        app:layout_constraintVertical_bias="0.0"></android.support.v7.widget.ListViewCompat>

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/listTomorrowTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:clickable="false"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tvTableTomorrow"
        app:layout_constraintRight_toRightOf="@id/tvTableTomorrow"
        app:layout_constraintTop_toBottomOf="@id/tvTableTomorrow"
        app:layout_constraintVertical_bias="1.0"></android.support.v7.widget.ListViewCompat>

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/listAfterTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:clickable="false"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tvTableAfter"
        app:layout_constraintRight_toRightOf="@id/tvTableAfter"
        app:layout_constraintTop_toBottomOf="@id/tvTableAfter"></android.support.v7.widget.ListViewCompat>

</android.support.constraint.ConstraintLayout>